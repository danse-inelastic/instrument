<!DOCTYPE geometry>

<geometry>

  <cylinder radius="2.5" height="100"/>
  <block thickness="0.1" height="1" width='0.2'/>
  <union>
    <cylinder radius="2.5" height="100"/>
    <block thickness="0.1" height="1" width='0.2'/>
    <sphere radius="1.0"/>
  </union>
  <rotation>
    <axis beam="1"/>
    <angle>90*deg</angle>
    <cylinder radius="1.*cm" height="5.*cm"/>
  </rotation>
  <translation>
    <vector vertical="1*mm"/>
    <cylinder radius="1.*cm" height="5.*cm"/>
  </translation>

</geometry>

